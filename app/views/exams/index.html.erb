<% content_for(:title) do %>
  Materias restantes
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
      <table class="table table-dark table-responsive-sm table-striped">

        <tr style="background-color: #1c1919; color: white">
