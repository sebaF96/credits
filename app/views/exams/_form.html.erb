<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"><%= current_user.name %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= @subject.name unless @subject == nil %>
        <% unless @subject %>
        <%= form_for([@subject, @exam]) do |f| %>
          <div class="field">
            <div class="control">
              <%= f.select :qualification, [[1,1], [2,2]], input_html: {class: 'form-control form-control-lg'}, label_html: {class: 'Nota'} %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.input :comment, input_html: {class: 'textarea'}, wrapper: false, label_html: {class: 'label'} %>
            </div>
          </div>
          <%= f.button :submit, 'Approve!' %>
        <% end %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>