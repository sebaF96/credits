<nav class="navbar navbar-expand-lg navbar-dark">

  <%= link_to root_path, class: "navbar-brand" do %>
    <img src="https://cdn.svgporn.com/logos/ruby.svg" width="30" height="30" alt="Logo">
    Ruby Credits
  <% end %>

  <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#rb-navbar" aria-controls="rb-navbar" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="rb-navbar">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <%= link_to new_subject_path, class: "btn btn-dark" do %>
          <span class="fa fa-address-book"></span>
          Add Subject
        <% end %>
      </li>
      <li class="nav-item">

        <%= link_to subjects_path, class: "btn btn-dark" do %>
          <span class="fa fa-address-book"></span>
          Subjects
        <% end %>
      </li>
      <li class="nav-item">
        <a class="btn btn-dark" href="#"> <span class="fa fa-cog"></span> Disabled</a>
      </li>
    </ul>

    <ul class="nav navbar-nav navbar-right">

      <% if current_user %>

        <span class="navbar-text" style="margin-right: 6px; color: white">
        <%= current_user.email %>
        </span>
        <li style="margin-right: 6px">
          <%= link_to logout_path, class: "btn btn-dark" do %>
            <span class="fa fa-sign-out"></span>
            Logout
          <% end %>
        </li>

      <% else %>

        <li style="margin-right: 6px">

          <%= link_to login_path, class: "btn btn-dark" do %>
            <span class="fa fa-sign-in"></span>
            Login
          <% end %>

        </li>

        <li>

          <%= link_to signup_path, class: "btn btn-dark" do %>
            <span class="fa fa-user-plus"></span>
            Sign up
          <% end %>

        </li>

      <% end %>
    </ul>
  </div>
</nav>

<% if notice.present? %>
  <div class="alert alert-success alert-dismissible fade show" role="alert" style="text-align: center">
    <%= notice %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>

<% if alert.present? %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert" style="text-align: center">
    <%= alert %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>

<div class="row" style="margin-bottom: 20px; margin-top: 20px">
  <div class="col-md-12" style="text-align: center">
    <h1>
      <% if content_for(:title) %>
        <%= content_for(:title) %>
      <% else %>
        Ruby credits
      <% end %>
    </h1>
  </div>

</div>